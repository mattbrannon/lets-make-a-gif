{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "prettierx": {
      "usePrettierrc": true,
      "editorconfig": false,
      "ignorePath": ".prettierignore",
      "pluginSearchDirs": [],
      "plugins": [],
      "withNodeModules": false,
      "useCache": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettierx/default"],
  "plugins": ["prettierx"],
  "rules": {
    "no-var": "error",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "prettierx/options": [
      "warn",
      {
        "arrayBracketSpacing": true,
        "breakBeforeElse": true,
        "semi": true,
        "printWidth": 100,
        "offsetTernaryExpressions": false,
        "singleQuote": true,
        "breakLongMethodChains": true
      }
    ]
  }
}
